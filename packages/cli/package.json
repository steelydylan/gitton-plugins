{
  "name": "@gitton-dev/cli",
  "version": "0.0.15",
  "description": "CLI tool for managing Gitton plugins",
  "type": "module",
  "bin": {
    "gitton": "./dist/index.js"
  },
  "scripts": {
    "generate": "tsx scripts/generate-plugin-list.ts",
    "build": "pnpm generate && tsup src/index.ts --format esm --dts --clean",
    "dev": "pnpm generate && tsup src/index.ts --format esm --watch",
    "clean": "rm -rf dist src/generated"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "gitton",
    "gitton-plugin",
    "cli"
  ],
  "author": "godai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:gitton-dev/gitton-plugins.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/gitton-dev/gitton-plugins/issues"
  },
  "homepage": "https://jsers.dev/service/gitton",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "pacote": "^21.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/pacote": "^11.1.8",
    "tsup": "^8.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
