{
  "name": "@gitton-dev/plugin-github-actions",
  "version": "0.0.5",
  "description": "View and trigger GitHub Actions workflows from Gitton",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "gitton": {
    "displayName": "GitHub Actions",
    "version": "0.0.0",
    "description": "View and trigger GitHub Actions workflows",
    "author": "Gitton Team",
    "permissions": [
      "ui:sidebar",
      "ui:settings",
      "settings:read",
      "settings:write",
      "network:fetch"
    ],
    "extensionPoints": {
      "sidebar": {
        "entry": "ui/src/sidebar/index.html",
        "icon": "play",
        "position": "bottom"
      },
      "settingsTab": {
        "entry": "ui/src/settings/index.html",
        "label": "GitHub Actions"
      }
    }
  },
  "files": [
    "dist",
    "ui",
    "package.json"
  ],
  "keywords": [
    "gitton",
    "gitton-plugin",
    "github-actions",
    "ci-cd"
  ],
  "author": "godai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:gitton-dev/gitton-plugins.git",
    "directory": "packages/plugin-github-actions"
  },
  "bugs": {
    "url": "https://github.com/gitton-dev/gitton-plugins/issues"
  },
  "homepage": "https://jsers.dev/service/gitton",
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.11"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "yaml": "^2.8.2"
  }
}
